<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tengesani">

    <application
        android:name=".TengesaniApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tengesani">
        <activity
            android:name=".category.ui.AddCategoryActivity"
            android:parentActivityName="com.tengesani.MainActivity"
            android:label="Add Category"
            android:exported="true" />
        <activity
            android:name=".product.ui.AddProductActivity"
            android:parentActivityName="com.tengesani.MainActivity"
            android:label="Add Product"
            android:exported="true" />
        <activity
            android:name=".purchases.ui.AddPurchaseActivity"
            android:parentActivityName="com.tengesani.MainActivity"
            android:exported="true"
            android:label="@string/title_activity_add_purchase"
            android:theme="@style/Theme.Tengesani" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>